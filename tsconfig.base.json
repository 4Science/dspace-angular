{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "pretty": true,
    "strictNullChecks": false,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@dspace/shared/utils": ["modules/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["cypress.config.ts"]
}
